{% extends 'base.html.twig' %}
{% block body %}
    {% if error %}
        <div><h3>{{ error.messageKey|trans(error.messageData, 'security') }}</h3></div>
    {% endif %}
    <div class="login-container">
        <h2>Login</h2>
        <form class="form-horizontal" action="{{ path('login') }}" method="post">
            <div>
                <i class="fa fa-user" aria-hidden="true"></i>
                <input type="email" id="user_email" placeholder="Email" name="_username">
            </div>
            <div>
                <i class="fa fa-lock" aria-hidden="true"></i>
                <input type="password" id="password" placeholder="Password" name="_password">
            </div>
            <div class="btns">
                <a class="btn btn-default" href="{{ path('homepage') }}">Cancel</a>
                <button type="submit" class="btn btn-default">Login</button>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
        </form>
    </div>

{% endblock %}